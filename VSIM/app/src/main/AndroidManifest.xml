<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.enability.visionsimulator">
    android:versionCode="1">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" />
    <application
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        >

        <activity android:label="@string/app_name"
            android:name="com.enability.visionsimulator.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CameraFxActivity"
            android:screenOrientation="landscape">
        </activity>
        <activity android:name=".cataract"
            android:screenOrientation="landscape"
        >
        </activity>
        <activity android:name=".colourblindness"
            android:screenOrientation="landscape"
            >
        </activity>
        <activity android:name=".astigmatism"
            android:screenOrientation="landscape">
        </activity>
    </application>


</manifest>
